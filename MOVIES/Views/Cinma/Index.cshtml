@model IEnumerable<MOVIES.Models.Cinema>

@{
    ViewData["Title"] = "Index";
}

<h1>Cinemas</h1>

 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
             
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                    <a class="btn btn-dark text-info" asp-action="MoviesCinema" asp-route-id="@item.Id" >AllMovies</a>

            </td>
        </tr>
}
    </tbody>
</table>
