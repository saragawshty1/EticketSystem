@model  IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

    <h1 >Categories</h1>

 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a class="btn btn-dark text-info" href="/Category/MoviesCategory/@item.Id">AllMovies</a>
            </td>
        </tr>
}
    </tbody>
</table>
